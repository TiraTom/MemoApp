<Page
	x:Class="MemoApp.Views.MainPage"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:local="using:MemoApp"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	xmlns:viewmodels="using:MemoApp.ViewModels"
	xmlns:views="using:MemoApp.Views"
	Width="80"
	Height="100"
	Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
	Loaded="Page_Loaded"
	mc:Ignorable="d">

	<StackPanel Orientation="Vertical">
		<ComboBox Header="{x:Bind ViewModel.TaskChoiceLabel}" ItemsSource="{x:Bind TaskList}">
			<ComboBox.ItemTemplate>
				<DataTemplate x:DataType="{x:Bind EachTask}">
					<StackPanel>
						<TextBlock Text="{x:Bind Name}" />
					</StackPanel>
				</DataTemplate>
			</ComboBox.ItemTemplate>
		</ComboBox>

		<StackPanel Orientation="Horizontal">
			<TextBlock Text="{x:Bind ViewModel.StartLabel}" />
			<TextBlock Text="{x:Bind ViewModel.PauseLabel}" />
			<TextBlock Text="{x:Bind ViewModel.FinishLabel}" />
		</StackPanel>

		<TextBox
			Width="80"
			Height="20"
			AcceptsReturn="True"
			Header="{x:Bind ViewModel.MemoLabel}"
			TextWrapping="Wrap" />

		<TextBox Width="80" Height="5" />


		<StackPanel Orientation="Horizontal">
			<Button Click="{x:Bind ViewModel.ShowHashList}" Content="{x:Bind ViewModel.HashButtonLabel}" />
			<Button Click="{x:Bind ViewModel.MemoRegister}" Content="{x:Bind ViewModel.RegisterButtonLabel}" />
		</StackPanel>



	</StackPanel>
</Page>
